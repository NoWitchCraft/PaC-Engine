<UserControl x:Class="Editor.ViewportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#2a2a2a"
             Focusable="True"
             MouseWheel="OnMouseWheel"
             MouseDown="OnMouseDown"
             MouseMove="OnMouseMove"
             MouseUp="OnMouseUp"
             MouseLeave="OnMouseLeave"
             KeyDown="OnKeyDown">
    <Grid x:Name="RootGrid" ClipToBounds="True">
        <Canvas x:Name="ViewportCanvas">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1" />
                    <TranslateTransform x:Name="PanTransform" X="0" Y="0" />
                </TransformGroup>
            </Canvas.RenderTransform>
            
            <!-- Background Image -->
            <Image x:Name="BackgroundImage" 
                   Stretch="None"
                   RenderOptions.BitmapScalingMode="NearestNeighbor" />
            
            <!-- Hotspots Layer -->
            <Canvas x:Name="HotspotsCanvas" />
        </Canvas>
        
        <!-- Grid Overlay (when enabled) -->
        <Canvas x:Name="GridCanvas" IsHitTestVisible="False" />
        
        <!-- UI Overlay -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="8">
            <TextBlock x:Name="ZoomLevelText" 
                       Text="Zoom: 100%"
                       Foreground="White" 
                       Background="#80000000" 
                       Padding="4,2"
                       FontSize="11" />
            <CheckBox x:Name="SnapToGridCheckBox"
                      Content="Snap to Grid"
                      Foreground="White"
                      Margin="0,4,0,0"
                      IsChecked="False"
                      Checked="OnSnapToGridChanged"
                      Unchecked="OnSnapToGridChanged" />
            <TextBlock x:Name="GridSizeText"
                       Foreground="White"
                       Background="#80000000"
                       Padding="4,2"
                       FontSize="11"
                       Margin="0,2,0,0"
                       Visibility="Collapsed">
                <Run Text="Grid: " />
                <Run x:Name="GridSizeValue" Text="16" />
                <Run Text="px" />
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
