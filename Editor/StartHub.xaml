<Window x:Class="Editor.StartHub"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PaCEngine Editor - Start Hub" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button" x:Key="HubButton">
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1a1a1a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#4a4a4a"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Background="#1e1e1e">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252525" BorderBrush="#333" BorderThickness="0,0,0,1" Padding="20">
            <StackPanel>
                <TextBlock Text="PaC Engine Editor" FontSize="32" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Willkommen! WÃ¤hlen oder erstellen Sie ein Projekt." 
                           FontSize="14" Foreground="#aaa" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Actions -->
            <Border Grid.Column="0" Background="#252525" BorderBrush="#333" 
                    BorderThickness="1" Margin="0,0,10,0" Padding="20">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Aktionen" FontSize="18" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,20"/>
                    
                    <Button Content="ðŸ“ Neues Projekt" Style="{StaticResource HubButton}" 
                            Click="NewProject_Click" HorizontalAlignment="Stretch"/>
                    
                    <Button Content="ðŸ“‚ Projekt Ã¶ffnen" Style="{StaticResource HubButton}" 
                            Click="OpenProject_Click" HorizontalAlignment="Stretch"/>
                    
                    <Separator Background="#333" Margin="10,20"/>
                    
                    <Button Content="âŒ Beenden" Style="{StaticResource HubButton}" 
                            Click="Exit_Click" HorizontalAlignment="Stretch"
                            Background="#442222"/>
                </StackPanel>
            </Border>

            <!-- Right Panel: Recent Projects -->
            <Border Grid.Column="1" Background="#252525" BorderBrush="#333" 
                    BorderThickness="1" Margin="10,0,0,0" Padding="20">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Zuletzt geÃ¶ffnet" 
                               FontSize="18" FontWeight="Bold" Foreground="White" 
                               Margin="0,0,0,15"/>
                    
                    <TextBlock x:Name="NoRecentProjectsText" 
                               Text="Keine zuletzt geÃ¶ffneten Projekte gefunden." 
                               Foreground="#888" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Visibility="Collapsed"/>
                    
                    <ListBox x:Name="RecentProjectsList" 
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             MouseDoubleClick="RecentProjectsList_MouseDoubleClick"
                             SelectionMode="Single">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Path}" FontSize="11" Foreground="#aaa" 
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock FontSize="10" Foreground="#777">
                                        <Run Text="Zuletzt geÃ¶ffnet: "/>
                                        <Run Text="{Binding LastOpened, StringFormat='{}{0:g}'}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
